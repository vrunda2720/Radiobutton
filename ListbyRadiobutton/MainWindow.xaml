<Window x:Class="ListbyRadiobutton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListbyRadiobutton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,1,-0.4,-1">
            <StackPanel Margin="20">
                <RadioButton Name="Radiobutton1" Content="SocialMedia" FontSize="20" IsChecked="True"></RadioButton>
                <RadioButton Name="Radiobutton2" Content="Sports" FontSize="20"></RadioButton>
                <RadioButton Name="Radiobutton3" Content="News" FontSize="20"></RadioButton>
                <RadioButton Name="Radiobutton4" Content="Email" FontSize="20"></RadioButton>
            </StackPanel>
            <StackPanel Margin="20">
                <ListBox Name="listbox1" Height="100" Width="400" FontSize="15"></ListBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
