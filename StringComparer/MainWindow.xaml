<Window x:Class="StringComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StringComparer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBlock Text="Input1:-" Height="40" Width="100" HorizontalAlignment="Left" FontSize="30" Name="blocki1"></TextBlock>
            <TextBox Name="boxi1" Height="40" Width="500" ></TextBox>
        </StackPanel>

        <StackPanel Margin="10"  Orientation="Horizontal" >
            <TextBlock Text="Input2:-" Height="40" Width="100" HorizontalAlignment="Left" FontSize="30" Name="blocki2"></TextBlock>
            <TextBox Name="boxi2" Height="40" Width="500" ></TextBox>
        </StackPanel>

            <StackPanel Margin="10">
                <Button Name="Valid" Content="Validate" Height="40" Width="200" FontSize="25" Click="Valid_Click"></Button>
            </StackPanel>

            <StackPanel Margin="40">
                <TextBox Name="boxvalid" Height="40" Width="400"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
